<div class="container w-50" style="min-height: 560px;">
  <div class="card p-3" style="margin-top: 50px;">
    <h4>Chỉnh sửa tài khoản cho Ruby</h4>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.email_field :email, autocomplete: "email", placeholder: 'Địa chỉ email của bạn', class: 'form-control', disabled: true %>
      </div>
      <br>
      <div class="form-group">
        <%= f.text_field :fullName, autofocus: true, autocomplete: "fullName", placeholder: 'Tên của bạn', class: 'form-control' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Lưu thay đổi", class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>
</div>
