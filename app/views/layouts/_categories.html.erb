        if (display === "none") {
          menu_display.style.display = "block";
          menu_categories.style.color = "#cf111a";
        } else {
          menu_display.style.display = "none";
          menu_categories.style.color = "#000000";
        }
      } else {
        if (display === "block") {
          menu_display.style.display = "none";
          menu_categories.style.color = "#000000";
        }
      }
    });
